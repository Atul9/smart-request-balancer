{
  "name": "smart-request-balancer",
  "version": "1.0.1",
  "description": "Smart request balancer with fine tuning of rates and limits of queue execution",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "mocha --reporter spec test/**/*",
    "cover": "nyc mocha test/**/*",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/energizer91/smart-request-balancer.git"
  },
  "keywords": [
    "request",
    "rate",
    "limit",
    "balancer",
    "queue",
    "typescript"
  ],
  "author": "energizer91",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/energizer91/smart-request-balancer/issues"
  },
  "homepage": "https://github.com/energizer91/smart-request-balancer#readme",
  "devDependencies": {
    "@types/debug": "^4.1.1",
    "@types/uuid": "^3.4.4",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "mocha": "^6.0.0",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "sinon": "^7.2.4",
    "sinon-chai": "^3.3.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "uuid": "^3.3.2"
  }
}
